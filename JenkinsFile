pipeline {
    agent any
    parameters{
        string(name: 'SPEC', defaultValue: "cypress/e2e/*/**", description: "Introduce the path of the test cases")
        choice(nmae: 'BROWSER', choices: ['chrome', 'edge', 'firefox', description: "Choice the browser"]
    }
    options {
        ansiColor('xterm')
    }
    tools {
        nodejs 'node-20'
        xvfb 'xvfb'
    }
    stages {
        stage('Clone Project') {
            steps {
                git branch: 'qa', url: 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Run Cypress') {
            steps {
                sh 'ls -a'
                
                sh 'npx cypress run --spec ${SPEC} --browser ${BROWSER}'
            }
        }
    }
}
