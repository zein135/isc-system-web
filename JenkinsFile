pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Run Cypress') {
            steps {
                // Pull Cypress Docker image
                sh 'docker pull cypress/included:12.0.0'

                // Run Cypress tests inside the Docker container
                sh '''
                docker run -v $PWD:/e2e -w /e2e cypress/included:12.0.0 \
                  npx cypress run --spec "cypress/e2e/**/*.cy.{ts,tsx}"
                '''
            }
        }
    }
}
