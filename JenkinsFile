pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Run Cypress') {
            steps {
                // Wrap the Cypress test execution inside the Xvfb block
                script {
                    xvfb(run: true) {
                        sh 'npx cypress run --spec "cypress/e2e/**/*.cy.{ts,tsx}"'
                    }
                }
            }
        }
    }
}
