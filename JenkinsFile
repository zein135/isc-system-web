pipeline {
    agent {
        docker {
            image 'cypress/included:13.14.2'
        }
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Run Cypress') {
            steps {
                sh 'npx cypress run --spec "cypress/e2e/**/*.cy.{ts,tsx}"'
            }
        }
    }
}
