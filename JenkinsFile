pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Install Xvfb') {
            steps {
                // Install Xvfb if it's not already installed
                sh 'apt-get update && apt-get install -y xvfb'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Run Cypress') {
            steps {
                // Start Xvfb and run Cypress in headless mode
                sh '''
                Xvfb :99 -ac &
                export DISPLAY=:99
                npx cypress run --spec "cypress/e2e/**/*.cy.{ts,tsx}"
                '''
            }
        }
    }
}
