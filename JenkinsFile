pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                script {
                    stash name: 'node_modules', include: 'node_modules/**'
                    sh 'npm install'
                }
            }
        }
        stage('Install Cypress Dependencies') {
            steps {
                sh '''
                apt-get update && apt-get install -y \
                    libgtk2.0-0 libgtk-3-0 libgbm-dev \
                    libnotify-dev libnss3 libxss1 \
                    libasound2 libxtst6 xauth xvfb
                '''
            }
        }
        stage('Build') {
            steps {
                unstash 'node_modules'
                sh 'npm run build'
            }
        }
        stage('Run Cypress') {
            steps {
                sh '''
                Xvfb :99 -ac &
                export DISPLAY=:99
                npx cypress run --spec "cypress/e2e/**/*.cy.{ts,tsx}"
                '''
            }
        }
    }
}
