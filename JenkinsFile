pipeline {
    agent any
    tools {
        nodejs 'node-20'
    }
    stages {
        stage('Clone Project') {
            steps {
                git 'https://github.com/PaulLandaeta/isc-system-web.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Install Cypress Dependencies') {
            steps {
                // Install the missing libraries and dependencies
                sh '''
                apt-get update
                apt-get install -y libgconf-2-4 libgtk2.0-0 libgbm-dev \
                                   libnotify-dev libnss3 libxss1 libasound2 \
                                   libxtst6 xauth xvfb libgobject-2.0-0
                '''
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Run Cypress') {
            steps {
                // Use Xvfb to simulate a display
                sh '''
                Xvfb :99 -ac &
                export DISPLAY=:99
                npx cypress run --spec "cypress/e2e/**/*.cy.{ts,tsx}"
                '''
            }
        }
    }
}
